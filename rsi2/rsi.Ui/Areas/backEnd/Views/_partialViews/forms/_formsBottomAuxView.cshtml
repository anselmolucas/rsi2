<div class="form-group">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="btn-group btn-group-lg" role="group" aria-label="...">
                <button id="returnButton_addressView" onclick="EsconderForm('adressesView')" type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" title="fechar janela"><span class="glyphicon glyphicon-off"></span></button>
            </div>
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            @if (ViewBag.FormHeaderAux["Operation"] == "d")
            {
                <div class="btn-group btn-group-lg pull-right" role="group" aria-label="...">
                    <button id="deleteButton_addressView" onclick="Show_Hide('deleteRegisterConfirm_addressView')" type="button" class="btn btn-danger" title="excluir o registro"><span class="glyphicon glyphicon-trash"></span></button>
                </div>
            }
            <br /><br /><br />
        </div>
    </div>

    <!-- div escondida para confirmar a deleção de registros -->
    <div id="deleteRegisterConfirm_addressView" class="row" style="display:none;">
        <div class="form-group">

            <h2 style="text-align:center;color:red;">*** confirmar exclusão ***</h2>

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="pull-left" role="group">
                    <button id="deleteButton_addressView" onclick="Show_Hide('deleteRegisterConfirm_addressView')" type="button" class="btn btn-default" title="retornar ao anunciante (fecha janela)">desistir</button>
                </div>
            </div>

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="pull-right" role="group">
                    <button onclick="sendAddressToDeleteAddressInView()" type="button" class="btn btn-danger" title="excluir o registro">
                        <span class="glyphicon glyphicon-trash"></span>
                        excluir registro !!!
                    </button>
                </div>
            </div>
        </div>
    </div>

    <br /><br />
</div>